{
  "name": "appsync-rds-backend",
  "version": "1.0.0",
  "scripts": {
    "offline": "serverless offline start --config serverless.local.yml",
    "offline:debug": "cross-env SLS_DEBUG=* serverless offline start --config serverless.local.yml",
    "deploy:dev": "serverless deploy --stage dev --verbose",
    "deploy:qa": "serverless deploy --stage qa --verbose",
    "deploy:prod": "serverless deploy --stage prod --verbose",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "serverless": "^3.38.0",
    "serverless-appsync-plugin": "^2.10.5",
    "serverless-appsync-simulator": "^0.16.1",
    "serverless-offline": "^13.0.0"
  },
  "overrides": {
    "serverless-appsync-simulator": {
      "cfn-resolver-lib": "1.1.7"
    }
  }
}